[user]
  name = {{ .name | quote }}
  email = {{ .email | quote }}

[init]
  defaultBranch = main

[rebase]
  autosquash = true
  autostash = true

[pull]
  ff = only

[diff]
  algorithm = histogram

[merge]
  conflictStyle = zdiff3

[commit]
  verbose = true

[branch]
  sort = -committerdate

[tag]
  sort = taggerdate

[alias]
  lazy = "!f() { lazygit; }; f"
  cz = "!f() { npx cz; }; f"
  ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"

